@using Brainbay.Characters.Contracts

<MudSelect T="CharacterGender?" Label="Gender" Value="@Value" ValueChanged="ValueChanged" Required="true">
    @foreach (var gender in Enum.GetValues<CharacterGender>())
    {
        <MudSelectItem @key="gender" T="CharacterGender?" Value="@gender">@gender</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter, EditorRequired]
    public CharacterGender? Value { get; set; }
    
    [Parameter, EditorRequired]
    public EventCallback<CharacterGender?> ValueChanged { get; set; }
}