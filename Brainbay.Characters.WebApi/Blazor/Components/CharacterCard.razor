@using Brainbay.Characters.Contracts

<MudCard Class="character-card" Elevation="8">
    <MudImage Src="@Character.ImageUrl.ToString()" Class="character-card__image" Fluid="true"/>

    <MudCardContent Class="character-card__body">
        <MudText Typo="Typo.h5" Class="character-card__name">
            @Character.Name
        </MudText>

        <MudDivider Class="my-2" />

        <MudStack Spacing="1">
            <MudStack Row="true" Justify="Justify.SpaceBetween">
                <MudText Typo="Typo.caption" Class="character-card__meta-label">
                    Origin
                </MudText>
                <MudText Typo="Typo.caption" Class="character-card__meta-value">
                    Earth
                </MudText>
            </MudStack>

            <MudStack Row="true" Justify="Justify.SpaceBetween">
                <MudText Typo="Typo.caption" Class="character-card__meta-label">
                    Species
                </MudText>
                <MudText Typo="Typo.caption" Class="character-card__meta-value">
                    @Character.Species
                </MudText>
            </MudStack>

            <MudStack Row="true" Justify="Justify.SpaceBetween">
                <MudText Typo="Typo.caption" Class="character-card__meta-label">
                    Gender
                </MudText>
                <MudText Typo="Typo.caption" Class="character-card__meta-value">
                    @Character.Gender
                </MudText>
            </MudStack>
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public Character Character { get; set; } = null!;
}
