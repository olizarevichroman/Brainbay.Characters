@using Brainbay.Characters.Contracts

<MudCard Elevation="5" Class="pa-4" Style="border-radius: 30px;">

    <MudCardContent Style="width: 220px;">
        <MudImage Alt="@Character.Name" Src="@Character.ImageUrl.ToString()" Fluid="true"/>
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudText>@Character.Name</MudText>
            <MudSpacer/>
            <MudChip T="string" Variant="Variant.Text" Color="Color.Primary" Size="Size.Medium">Human</MudChip>
        </MudStack>
        <MudStack>@($"Gender: {Character.Gender}")</MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public Character Character { get; set; }
}